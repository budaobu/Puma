{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}

{{! Everything inside the #author tags pulls data from the author }}
{{#author}}
    

    <section class="author-profile u-textAlignCenter author-header">
        {{#if image}}
        <figure class="author-image">
            <div class="img" style="background-image: url({{image}})"><span class="hidden">{{name}}'s Picture</span></div>
        </figure>
        {{/if}}
        <h1 class="author-name">{{name}}</h1>
        {{#if bio}}
            <h2 class="author-description">{{bio}}</h2>
        {{/if}}
        <div class="author-meta">
                        {{#if location}}<span class="author-meta-item"><svg class="icon icon-instagram" height="14" width="14" viewBox="0 0 14 14"><use xlink:href="{{asset "img/svgdefs.svg"}}#icon-location"></use></svg>{{location}}</span>{{/if}}
                        {{#if website}} <span class="author-meta-item"><svg class="icon icon-twitter" height="14" width="14" viewBox="0 0 14 14"><use xlink:href="{{asset "img/svgdefs.svg"}}#icon-link"></use></svg><a href="{{website}}">{{website}}</a></span>{{/if}}
        </div>
    </section>
{{/author}}

{{! The main content area on the homepage }}
<main class="main-content" role="main">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}

</main>
